<?xml version="1.0" encoding="UTF-8"?>

	<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://java.sun.com/xml/ns/javaee"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	                    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		id="WebApp_ID" version="3.0">

	
		<!-- ======== Filter Mapping ======== -->
		
		<filter>
			<filter-name>valfilterdemo</filter-name>
			<filter-class>com.codezmr.filters.ValidationFilter</filter-class>
		</filter>
		<filter-mapping>
			
			<filter-name>valfilterdemo</filter-name>
			<url-pattern>/reg</url-pattern>
		
		</filter-mapping>
		
		
		<!-- ======== Register Mapping ======== -->
		<servlet>
			<servlet-name>regdemo</servlet-name>
			<servlet-class>com.codezmr.backend.Register</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>regdemo</servlet-name>
			<url-pattern>/reg</url-pattern>
		</servlet-mapping>
		
		
		<!-- ======== Login Mapping ======== -->
		<servlet>
			<servlet-name>logindemo</servlet-name>
			<servlet-class>com.codezmr.backend.Login</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>logindemo</servlet-name>
			<url-pattern>/login</url-pattern>
		</servlet-mapping>

	   	<!-- ======== Logout Mapping ======== -->
		<servlet>
			<servlet-name>logoutdemo</servlet-name>
			<servlet-class>com.codezmr.backend.Logout</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>logoutdemo</servlet-name>
			<url-pattern>/Logout</url-pattern>
		</servlet-mapping>
		
		  	<!-- ======== EditProfileAbout Mapping ======== -->
		<servlet>
			<servlet-name>epademo</servlet-name>
			<servlet-class>com.codezmr.backend.EditProfileAbout</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>epademo</servlet-name>
			<url-pattern>/editProfileAbout</url-pattern>
		</servlet-mapping>
		
		
			<!-- ======== AddProfileEducation Mapping ======== -->
		<servlet>
			<servlet-name>apedemo</servlet-name>
			<servlet-class>com.codezmr.backend.AddProfileEducation</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>apedemo</servlet-name>
			<url-pattern>/addProfileEducation</url-pattern>
		</servlet-mapping>
		
		
					<!-- ======== EditProfileEducation Mapping ======== -->
		<servlet>
			<servlet-name>epedemo</servlet-name>
			<servlet-class>com.codezmr.backend.EditProfileEducation</servlet-class>
		</servlet>

		<servlet-mapping>
			<servlet-name>epedemo</servlet-name>
			<url-pattern>/editProfileEducation</url-pattern>
		</servlet-mapping>
		
		
	</web-app>
